<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--
      - primary meta tags
    -->
    <title>@ViewBag.Title - Restaurant</title>
    <meta name="title" content="Grilli - Amazing & Delicious Food">
    <meta name="description" content="This is a Restaurant html template made by codewithsadee">

    <!--
      - favicon
    -->
    <link rel="shortcut icon" href="../favicon.svg" type="image/svg+xml">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">

    <!--
      - google font link
    -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&family=Forum&display=swap"
          rel="stylesheet">

    <!--
      - custom css link
    -->
    <link rel="stylesheet" href="~/Content/css/style.css">

    <!--
      - preload images
    -->
    <link rel="preload" as="image" href="~/Uploads/images/hero-slider-1.jpg">
    <link rel="preload" as="image" href="~/Uploads/images/hero-slider-2.jpg">
    <link rel="preload" as="image" href="~/Uploads/images/hero-slider-3.jpg">

</head>

<body id="top" class="body-login">

    <!--
      - #PRELOADER
    -->

    <div class="preload" data-preaload>
        <div class="circle"></div>
        <p class="text">Grilli</p>
    </div>




    <!--
      - #HEADER
    -->

    <header class="header-other" data-header>
        <div class="container">

            <a href="@Url.Action("Index", "Default")" class="logo">
                <img src="~/Uploads/images/logo.svg" width="160" height="50" alt="Grilli - Home">
            </a>



        </div>
    </header>




    <main>
        @RenderBody();
    </main>


    <!--
      - custom js link
    -->
    <script src="~/Scripts/js/script.js"></script>

    <!--
      - ionicon link
    -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>

</html>