@model PJ_.Net_Restaurant.Models.User

@{
    ViewBag.Title = "ResetPass";
    Layout = "~/Views/Shared/Layout/_PublicLayout.cshtml";
}

<div id="wrapper" class="wrapper">

    @using (Html.BeginForm("resetpass", "Public", FormMethod.Post, new { @class = "form-login", @id = "form-login", onsubmit = "return validateResetPass()" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id)

        <h1 class="form-heading">Reset password</h1>
        <div class="form-group form-group-login">
            <i class="fas fa-key"></i>
            @Html.PasswordFor(model => model.password, new { @class = "form-input form-input-login", @id = "pwd", placeholder = "Enter password", @name = "pwd" })
        </div>

        <div class="form-group form-group-login">
            <i class="fas fa-key"></i>
            <input value="" type="password" class="form-input form-input-login" id="cnpwd" placeholder="Enter new password" name="cnpwd">
            <div id="eye">
                <i class="far fa-eye"></i>
            </div>
        </div>

        <div class="errorMessage my-3" id="message">@ViewData["error"]</div>

        <button class="form-submit" type="submit" class="btn btn-default">
            <a>Submit</a>
        </button>
    }
</div>

