@model PJ_.Net_Restaurant.Models.ChangePass

@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/Layout/_PublicLayout.cshtml";
}

<div id="wrapper" class="wrapper">
    <!-- <form class="form-login" id="form-login" onsubmit="return validateUserChangePass()" action="" method="post"> -->
    @using (Html.BeginForm("ChangePass", "User", FormMethod.Post, new { @class = "form-login", @id = "form-login", onsubmit = "return validateUserChangePass()" }))
    {
        @Html.AntiForgeryToken()

        <h1 class="form-heading">Change password</h1>

        <div class="form-group form-group-login">
            <i class="fas fa-key"></i>
            <!-- <input value="" type="password" class="form-input form-input-login" id="opwd" placeholder="Enter old password" name="opwd"> -->
            @Html.PasswordFor(model => model.password, new { @class = "form-input form-input-login", @id = "opwd", placeholder = "Enter old password", @name = "opwd" })
        </div>

        <div class="form-group form-group-login">
            <i class="fas fa-key"></i>
            @Html.PasswordFor(model => model.newpassword, new { @class = "form-input form-input-login", @id = "npwd", placeholder = "Enter new password", @name = "npwd" })

        </div>

        <div class="form-group form-group-login">
            <i class="fas fa-key"></i>
            @Html.PasswordFor(model => model.newcfpassword, new { @class = "form-input form-input-login", @id = "cnpwd", placeholder = "Confirm new password", @name = "cnpwd" })
            <div id="eye">
                <i class="far fa-eye"></i>
            </div>
        </div>

        <div class="errorMessage my-3" id="message">@ViewData["error"]</div>

        <button class="form-submit" type="submit" class="btn btn-default">Submit</button>
    }
    <!-- </form> -->
</div>


