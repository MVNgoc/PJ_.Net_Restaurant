
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout/_PublicLayout.cshtml";
}

<div id="wrapper" class="wrapper">
    <form class="form-login" id="form-login" onsubmit="return validateInput()" action="" method="post">
        <h1 class="form-heading">Information</h1>
        <div class="form-group form-group-login">
            <i class="far fa-user"></i>
            <input type="text" class="form-input form-input-login" id="name" value="Nguyen Trung Hau" name="name">
        </div>
        <div class="form-group form-group-login">
            <i class="fa-regular fa-address-card"></i>
            <input type="text" class="form-input form-input-login" id="address" value="Quan 7, Ho Chi Minh City" name="address">
        </div>
        <div class="form-group form-group-login">
            <i class="fa-regular fa-envelope"></i>
            <input type="text" class="form-input form-input-login" id="email" value="trunghau@gmail.com" name="email">
        </div>
        <div class="form-group form-group-login">
            <i class="fas fa-key"></i>
            <input type="password" class="form-input form-input-login" id="pwd" value="123456789" name="pwd">
            <a href="/User/ChangePass">Change</a>
        </div>

        <div class="errorMessage my-3" id="message"></div>
        <button class="form-submit" type="submit" class="btn btn-default">
            <a href="/User/BillHistory">History of ordering</a>
        </button>
    </form>
</div>

