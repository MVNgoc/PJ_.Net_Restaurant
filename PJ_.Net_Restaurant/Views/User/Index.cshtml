@model PJ_.Net_Restaurant.Models.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout/_PublicLayout.cshtml";
}

<div id="wrapper" class="wrapper">
    @using (Html.BeginForm("Index", "User", FormMethod.Post, new { @class = "form-login", @id = "form-login", onsubmit = "return validateUserInfo()" }))
    {
        @Html.AntiForgeryToken()

        <h1 class="form-heading">Information</h1>

        <div class="form-group form-group-login">
            <i class="far fa-user"></i>
            @Html.TextBoxFor(model => model.name, new { @class = "form-input form-input-login", @id = "name", @name = "name", @Value = Session["name"] })
        </div>

        <div class="form-group form-group-login">
            <i class="fa-regular fa-address-card"></i>
            @Html.TextBoxFor(model => model.address, new { @class = "form-input form-input-login", @id = "address", @name = "address", @Value = Session["address"] })
        </div>

        <div class="form-group form-group-login">
            <i class="fa-regular fa-envelope"></i>
            @Html.TextBoxFor(model => model.email, new { @class = "form-input form-input-login", @id = "email", @name = "email", @Value = Session["email"] })
        </div>
        <div class="form-group form-group-login">
            <i class="fas fa-key"></i>
            @Html.PasswordFor(model => model.email, new { @class = "form-input form-input-login", @id = "pwd", @name = "pwd", @Value = Session["password"] })
            <a href="/User/ChangePass">Change</a>
        </div>

        <div class="errorMessage my-3" id="message">@ViewData["error"]</div>

        <button class="form-submit" type="submit" class="btn btn-default">
            <a>Save</a>
        </button>

        <button class="form-submit" type="button" class="btn btn-default">
            <a href="/User/BillHistory">History of ordering</a>
        </button>
    }
</div>