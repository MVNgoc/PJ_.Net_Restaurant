@model PJ_.Net_Restaurant.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/admin/Views/Shared/_PublicLayout.cshtml";
}

@using (Html.BeginForm("Index", "Public", FormMethod.Post, new { @class = "login100-form validate-form", onsubmit = "return validateInput()" }))
{
    @Html.AntiForgeryToken()

    <span class="login100-form-title p-b-43">
        ADMIN LOGIN
    </span>


    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
        @Html.TextBoxFor(model => model.email, new { @class = "input100", @type = "text", @name = "email" })
        <span class="focus-input100"></span>
        <span class="label-input100">Email</span>
    </div>


    <div class="wrap-input100 validate-input" data-validate="Password is required">
        @Html.TextBoxFor(model => model.password, new { @class = "input100", @type = "password", @name = "pass" })
        <span class="focus-input100"></span>
        <span class="label-input100">Password</span>
    </div>

    <div class="input100" style="color: red; text-align:center; padding-bottom:10px" id="message">@ViewData["error"]</div>

    <div class="flex-sb-m w-full p-t-3 p-b-32">

        <div>
            <a href="@Url.Action("ForgotPass", "Public")" class="txt1">
                Forgot Password?
            </a>
        </div>
    </div>


    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            Login
        </button>
    </div>
}

