@using PJ_.Net_Restaurant.Help
@model PJ_.Net_Restaurant.Models.Food

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<style>
    dl dd {
        margin: 10px 0;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                Chi tiết Món
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Hình ảnh")
                    </dt>

                    <dd>
                        <img src="~/Uploads/images/foods/@Model.img" style="width: 160px;" />
                    </dd>
                    <dt>
                        @Html.DisplayName("Tên món")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt>
                        @Html.DisplayName("Giá")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.price)
                    </dd>
                    <dt>
                        @Html.DisplayName("Giảm giá (%)")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.discountprice)
                    </dd>
                    <dt>
                        @Html.DisplayName("Mô tả")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.describe)
                    </dd>
                    <dt>
                        @Html.DisplayName("Tag")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.type)
                    </dd>
                    <dt>
                        @Html.DisplayName("Kiểu món")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.footstyle)
                    </dd>
                    <dt>
                        @Html.DisplayName("Đã bán")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.sales)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.meta)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.meta)
                    </dd>

                    <dt>
                        @Html.DisplayName("Vị trí")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.order)
                    </dd>

                    <dt>
                        @Html.DisplayName("Trạng thái")
                    </dt>

                    <dd>
                        @(Model.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                    </dd>

                    <dt>
                        @Html.DisplayName("Ngày cập nhật")
                    </dt>

                    <dd>
                        @(Model.datebegin.HasValue ? Model.datebegin.Value.ToString("dd/MM/yyyy") : "")
                    </dd>

                </dl>
            </div>
            <p>
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Cập nhật", "Edit", "Foods", routeValues: new { id = Model.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default", @style = "margin: 0 14px" })
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-triangle-left'></span>", "Quay lại", "Index", "Foods", htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
            </p>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
