@using PJ_.Net_Restaurant.Help
@model PJ_.Net_Restaurant.Models.Navbar

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<style>
    dl dd {
        margin: 10px 0;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                Chi tiết Menu
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Tiêu đề")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.meta)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.meta)
                    </dd>

                    <dt>
                        @Html.DisplayName("Trạng thái")
                    </dt>

                    <dd>
                        @(Model.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                    </dd>

                    <dt>
                        @Html.DisplayName("Vị trí")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.order)
                    </dd>

                    <dt>
                        @Html.DisplayName("Ngày cập nhật")
                    </dt>

                    <dd>
                        @(Model.datebegin.HasValue ? Model.datebegin.Value.ToString("dd/MM/yyyy") : "")
                    </dd>

                </dl>
            </div>
            <p>
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Cập nhật", "Edit", "menus", routeValues: new { id = Model.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default", @style="margin: 0 14px" })
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-triangle-left'></span>", "Quay lại", "Index", "menus", htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
            </p>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
