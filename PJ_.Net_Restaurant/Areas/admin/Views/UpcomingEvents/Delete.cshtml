@using PJ_.Net_Restaurant.Help
@model PJ_.Net_Restaurant.Models.UpcomingEvent

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<style>
    dl dd {
        margin: 10px 0;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                Xóa Món
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <h3>Bạn muốn xóa Event này?</h3>
                <div>

                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayName("Hình ảnh")
                        </dt>

                        <dd>
                            <img src="~/Uploads/images/events/@Model.img" style="width: 160px;" />
                        </dd>
                        <dt>
                            @Html.DisplayName("Chủ đề")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.content)
                        </dd>
                        <dt>
                            @Html.DisplayName("Ngày diễn ra")
                        </dt>

                        <dd id="startDate">
                            @Html.DisplayFor(model => model.eventdate)
                        </dd>
                        <dt>
                            @Html.DisplayName("Mô tả")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.title)
                        </dd>
                        <dt>
                            @Html.DisplayName("Chi tiết")
                        </dt>

                        <dd style="border: 1px solid #b1154a; padding: 20px; border-radius: 20px;">
                            @Html.Raw(Model.description)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.meta)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.meta)
                        </dd>

                        <dt>
                            @Html.DisplayName("Vị trí")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.order)
                        </dd>

                        <dt>
                            @Html.DisplayName("Trạng thái")
                        </dt>

                        <dd>
                            @(Model.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                        </dd>

                        <dt>
                            @Html.DisplayName("Ngày cập nhật")
                        </dt>

                        <dd>
                            @(Model.datebegin.HasValue ? Model.datebegin.Value.ToString("dd/MM/yyyy") : "")
                        </dd>

                    </dl>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-triangle-left'></span>", "Quay lại", "Index", "UpcomingEvents", htmlAttributes: new { data_modal = "", @class = "btn btn-default", @style = "margin: 0 10px 0 0" })
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section _Footer
{
    @{
        var startDate = Model.eventdate.Value.ToString("dd/MM/yyyy");
    }
    <script>

        var dateInput = document.getElementById("startDate");
    dateInput.innerText = "@startDate";
    </script>
}
